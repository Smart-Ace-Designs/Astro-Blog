---
const { currentPage, disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---

<div class="mt-10 flex justify-between">
  <a
    href={"/articles?page=" + (currentPage - 1)}
    class={disablePrevious
      ? "inline-block bg-gray-100 text-gray-400 px-3 py-2 rounded-lg pointer-events-none"
      : "inline-block bg-indigo-200 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}
  >
    Previous
  </a>
  <a
    href={"/articles?page=" + (currentPage + 1)}
    class={disableNext
      ? "inline-block bg-gray-100 text-gray-400 px-3 py-2 rounded-lg pointer-events-none"
      : "inline-block bg-indigo-200 px-3 py-2 hover:bg-indigo-600 hover:text-white rounded-lg"}
  >
    Next
  </a>
</div>
